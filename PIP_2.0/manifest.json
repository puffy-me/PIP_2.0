{
  "manifest_version": 3,
  "name": "PiP Chrome Extension",
  "description": "A simple Chrome extension for Picture-in-Picture mode.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
